<div>
  <!-- <div class="contain-to-grid sticky"> -->
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <div>
            <h1><a class ='logo' href='/'><%= image_tag 'makersquare_diecut.png' %>
              <span class ='logo_fat'>Maker</span>
              <span class ='logo_skinny'>Square</span>
            </a></h1>
          </div>
        </li>
      </ul>

      <section ng-controller="PipelineIndexCtrl" class="top-bar-section">
        <ul class="left" bs-active-link>
          <li><a href="/#/pipelines">Pipelines</a></li>
          <!-- TODO -->
          <li><a href="/#/contacts">Contacts</a></li>
          <li><a href="/#/users">Users</a></li>
        </ul>

          <ul class="right">
          <!-- FIXME: need to fix bs-active-link for the email_settings -->
            <% if current_user %>
            <li>
              <a href="/#/email_settings/<%=current_user.id%>" title=""><i class="fi-widget"></i></a>
            </li>
            <li>
              <%= link_to "Sign out " + current_user.name, signout_path, id: "sign_out" %>
            </li>
            <% else %>
              <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
            <% end %>
          </ul>

          <ul class="right" >
            <div class = 'topbarmargin' ng-controller="SearchCtrl">
              <li><input class = 'topbarcenter' ng-model="searchItem" type="text" placeholder="Type to Search" ng-change="search()"/></li>
            </div>
          </ul>
        </ul>
      </section>

    </nav>
